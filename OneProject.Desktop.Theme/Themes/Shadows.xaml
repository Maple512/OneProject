    <DropShadowEffect x:Key="Shadow5" BlurRadius="11" Direction="270" Opacity="0.45" RenderingBias="Performance" ShadowDepth="3"
            Color="{StaticResource DefaultShadowColor}" po:Freeze="True" />
    <DropShadowEffect x:Key="Shadow6" BlurRadius="13" Direction="270" Opacity="0.45" RenderingBias="Performance" ShadowDepth="3.5"
