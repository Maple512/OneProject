<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:OneProject.Desktop.Themes">

    <ContextMenu x:Key="DefaultContextMenu"
                 FontFamily="{Binding PlacementTarget.FontFamily, RelativeSource={RelativeSource Self}}">
        <MenuItem Command="Cut">
            <MenuItem.Icon>
                <themes:OPIcon Kind="Cut" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Command="Copy">
            <MenuItem.Icon>
                <themes:OPIcon Kind="Copy" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Command="Paste">
            <MenuItem.Icon>
                <themes:OPIcon Kind="Paste" />
            </MenuItem.Icon>
        </MenuItem>
        <Separator />
        <MenuItem Command="SelectAll">
            <MenuItem.Icon>
                <themes:OPIcon Kind="SelectAll" />
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>

</ResourceDictionary>
