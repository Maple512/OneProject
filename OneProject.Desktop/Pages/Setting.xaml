<UserControl x:Class="OneProject.Desktop.Pages.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:themes="http://github.com/maple512/oneproject.desktop/themes"
             xmlns:viewmodels="clr-namespace:OneProject.Desktop.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <themes:OPCard Title="设置"
                   Icon="Setting">
        <themes:OPCard.TitleAction>
            <themes:OPStackPanel>
                <themes:OPButton Content="保存" />
            </themes:OPStackPanel>
        </themes:OPCard.TitleAction>

        <Grid>
            <TabControl>
                
            </TabControl>
        </Grid>
    </themes:OPCard>
</UserControl>
