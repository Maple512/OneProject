<Application x:Class="OneProject.Desktop.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:themes="http://github.com/maple512/oneproject.desktop/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <themes:DesktopTheme Source="pack://application:,,,/OneProject.Desktop.Theme;component/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/OneProject.Desktop.Theme;component/Themes/Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <sys:Boolean x:Key="True">True</sys:Boolean>
            <sys:Boolean x:Key="False">False</sys:Boolean>
        </ResourceDictionary>
    </Application.Resources>

</Application>
